<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_activity_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:background="@drawable/toolbar_background">

        <ImageButton
            android:id="@+id/imgBtn_backToHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:background="@android:color/transparent"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_centerVertical="true"/>

    </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/toolbar_activity_profile"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/profile"/>
    <TextView
        android:id="@+id/tv_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ci_profile"
        android:text="Asep Rizal"
        android:layout_marginStart="32dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_first_name"
        android:text="Ridwanulloh"
        android:layout_marginStart="32dp"
        android:layout_marginTop="-10dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#9fa5a8"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_last_name"
        android:text="aseprizal2496@gmail.com"
        android:layout_marginStart="32dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="20dp"/>




</RelativeLayout>